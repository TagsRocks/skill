<UserControl x:Class="Skill.Studio.IO.Editor.ClassNamePropertyEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:io="clr-namespace:Skill.Studio.IO"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200" x:Name="This" >
    <Grid>
        <ComboBox x:Name="_CmbClasses" SelectionChanged="CmbClasses_SelectionChanged" >
            <ComboBox.Resources>
                <DataTemplate DataType="{x:Type io:SaveClassViewModel}">
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.Resources>    
        </ComboBox>
    </Grid>
</UserControl>
