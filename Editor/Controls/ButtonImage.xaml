<UserControl x:Class="Skill.Studio.Controls.ButtonImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctr="clr-namespace:Skill.Studio.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="This" >
    <UserControl.Resources>
        <ctr:BoolToVisibilityConverter x:Key="My_BToVisConverter" />
    </UserControl.Resources>
    <Grid>
        <Image Name="_ImageNormal" Source="{Binding ElementName=This, Path=NormalImage}" Visibility="{Binding ElementName=This, Path=IsEnabled, Converter={StaticResource My_BToVisConverter}, ConverterParameter=False}"  />
        <Image Name="_ImageDisabled" Source="{Binding ElementName=This, Path=DisableImage}" Visibility="{Binding ElementName=This, Path=IsEnabled, Converter={StaticResource My_BToVisConverter}, ConverterParameter=True}" />
    </Grid>
</UserControl>
