<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sk="clr-namespace:Skill.Editor"
                    xmlns:diag="clr-namespace:Skill.Editor.Diagram"
                    xmlns:clr="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="ToolbarBackColor" Color="#BCC7D8" />
    <LinearGradientBrush x:Key="MenuBackgroundColor" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0"  Color="#CAD3E2" />
        <GradientStop Offset="1.0"  Color="#AEB9CD" />
    </LinearGradientBrush>
    <Style TargetType="{x:Type MenuItem}" x:Key="MnuBackground" >
        <Setter Property="Background" Value="#E8EBEE" />
    </Style>

    <LinearGradientBrush x:Key="MenuBgBrush" StartPoint="0,0" EndPoint="0,1" >
        <GradientStop Color="#AAFFFCF2" Offset="0.05"/>
        <GradientStop Color="#AAFFF3CF" Offset="0.48"/>
        <GradientStop Color="#AAFFECB5" Offset="0.5"/>
        <GradientStop Color="#AAFFECB5" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type TreeViewItem}" x:Key="TreeViewItemStyle" >
        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Padding" Value="1" />

        <Setter Property="BorderThickness" Value="1"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="BorderBrush" Value="#84acdd"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsSelected" Value="True"/>
                    <Condition Property="IsSelectionActive" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="BorderBrush" Value="#DADADA"/>
            </MultiTrigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="2"/>
            </Style>
        </Style.Resources>
    </Style>

