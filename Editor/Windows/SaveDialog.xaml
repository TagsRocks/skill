<Window x:Class="Skill.Editor.SaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Skill" Height="330" Width="460" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" >
    <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition Height="22" />
            <RowDefinition Height="20" />
            <RowDefinition Height="210" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Text="Save changes to the following items?" Margin="14,0,0,0" />
        <ListBox Grid.Row="2" Margin="14,0,14,20" Name="_LbItems" />
        <WrapPanel Grid.Row="3" FlowDirection="RightToLeft" Margin="14,0" >
            <WrapPanel.Resources>
                <Style TargetType="Button" >
                    <Setter Property="Margin" Value="2" />
                    <Setter Property="Height" Value="24" />
                    <Setter Property="Width" Value="85" />
                </Style>
            </WrapPanel.Resources>
            <Button Content="Cancel" Click="BtnCancel_Click" />
            <Button Content="No" Click="BtnNo_Click" />
            <Button Content="Yes" Click="BtnYes_Click" />
        </WrapPanel>
    </Grid>
</Window>
