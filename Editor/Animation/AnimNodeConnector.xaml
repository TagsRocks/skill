<UserControl x:Class="Skill.Editor.Animation.AnimNodeConnector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:diag="clr-namespace:Skill.Editor.Diagram" 
             Height="32" x:Name="_This" HorizontalAlignment="Stretch" d:DesignWidth="100" >
    <Grid>
        <DockPanel Height="32" LastChildFill="False" >
            <diag:Connector x:Name="_Connector" DockPanel.Dock="Right" Orientation="Right" Margin="0,0,-20,0" Arrow="Arrow"  />
            <TextBlock Style="{StaticResource AnimationText}" Text="{Binding ElementName=_This,Path=Text }" DockPanel.Dock="Right" />
        </DockPanel>
    </Grid>
</UserControl>
