<UserControl x:Class="Skill.Studio.Animation.FloatCollectionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:anim="clr-namespace:Skill.Studio.Animation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListBox x:Name="_ListBox"  HorizontalContentAlignment="Stretch">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type anim:FloatContainer}">
                    <TextBox   Text="{Binding Path=Property,Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>        
    </Grid>
</UserControl>
